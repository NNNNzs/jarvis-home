{
  "name": "jarvis-home-system",
  "version": "1.0.0",
  "description": "基于LLM的多智能体智能家居控制系统 (Node.js + TypeScript + LangChain/LangGraph)",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "NODE_ENV=production node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "ai",
    "llm",
    "langchain",
    "langgraph",
    "smart-home",
    "home-assistant",
    "iot",
    "agent",
    "multi-agent"
  ],
  "author": "User",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "@langchain/core": "^1.1.8",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/openai": "^1.2.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}